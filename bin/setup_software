#! /usr/bin/env bash

# DESCRIPTION
# Sets up and launches (if necessary) installed software.

# Bash
sudo bash -c "printf '/usr/local/bin/bash\n' >> /etc/shells"

# Bash Completion
chsh -s /usr/local/bin/bash

# Homebrew
(
  cd /usr/local/Homebrew
  git config --local core.hooksPath /dev/null
)

# Ruby
printf "%s\n" "---" > "$HOME/.gemrc"
printf "%s\n" "gem: --no-document" >> "$HOME/.gemrc"
printf "%s\n" "$MRI" > "$HOME/.ruby-version"
git clone https://github.com/bkuhlmann/ruby_setup.git
(
  cd ruby_setup
  git checkout $REPO_RUBY_SETUP
  /usr/local/bin/ruby-install "ruby-$MRI"
  bin/run i
)
rm -rf ruby_setup

# Yarn
install_git_project "https://github.com/bkuhlmann/yarn_setup.git" $REPO_YARN_SETUP "yarn_setup" "bin/run i"

# Go
install_git_project "https://github.com/bkuhlmann/go_setup.git" $REPO_GO_SETUP "go_setup" "bin/run i"

# Dotfiles
rm -f $HOME/.vimrc
install_file "https://gist.githubusercontent.com/unp/be8261aed5bf522f78d5/raw/f490de25a6294074ccae1a83c738cb235bebb4be/.vimrc" "$HOME/.vimrc"
source $HOME/.vimrc
